<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="常规">

        <Preference
            android:key="normal_interval_time"
            android:summary="更新频率过快可能会导致更新失败"
            android:title="设置更新所有宝贝的间隔时间"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="导入">

        <Preference
            android:key="import_items"
            android:summary="请提前将宝贝链接分行存入 sdcard/lshapp/Paa/import/items.txt 文件中"
            android:title="批量导入宝贝"/>

        <Preference
            android:key="import_realm"
            android:summary="请提前将 Realm 数据库存入 sdcard/lshapp/Paa/import/paa.realm 目录下即可"
            android:title="导入 Realm 数据库"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="导出">

        <Preference
            android:key="export_realm"
            android:title="导出数据库到本地"/>

    </PreferenceCategory>


    <PreferenceCategory
        android:title="更新">

        <Preference
            android:key="check_update"
            android:title="检查更新"/>

    </PreferenceCategory>

</PreferenceScreen>